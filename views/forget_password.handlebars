    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>

    <script type='text/javascript'>

        $("#submit").on("click", event => {
            event.preventDefault();
            let email = $("#email").val();


            let data = {
                email: email,

            }


            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "https://trade-ninja-9505.nodechef.com/forget_password",
                data: JSON.stringify(data)

            }).then((results) => {
                console.log(results)

                if (results === "Email not found") {
                    $("#alert-space").html(`<div class="alert alert-transparent text-warning" role="alert">Please enter a valid email.</div>`);
                    setTimeout(() => {
                        $("#alert-space").empty();
                    }, 3000);
                }



                if (results === "Email success!") {

                    $("#alert-space").html(`<div class="alert alert-transparent text-success" role="alert">Your username was sent to your email.</div>`)
                    setTimeout(() => {
                        window.location = "/login"
                    }, 3000);
                }

            })
        })

    </script>
